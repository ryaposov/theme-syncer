{
  "name": "Auth Theme Switcher",
  "manifest_version": 3,
  "version": "0.1",
  "description": "Keeps the web page color theme settings in sync with system color theme.",
  "permissions": [
    "background",
    "scripting"
  ],
  "host_permissions": [
    "https://*.slack.com/*/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://*.slack.com/*"],
      "js": ["slack.js"]
    }
  ]
}
